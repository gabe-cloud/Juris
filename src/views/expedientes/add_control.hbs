<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/expediente/add_control" method="POST">
                    <p><center>CARGA DE NUEVO EXPEDIENTE</center></p>
                        <div class="form-group">
                            <input type="text" name="id_expedientecontrol" class="form-control" placeholder="Número Expediente" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_tribunal" class="form-control" placeholder="ID Tribunal" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ci" class="form-control" placeholder="ID Interviniente" autofocus>
                        </div>
                        <div class="form-group">
                        <p>Fecha de actuación: <input type="date" name="fecha_actuacion"></p>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion_actuacion" rows="2" class="form-control" placeholder="Descripción"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>